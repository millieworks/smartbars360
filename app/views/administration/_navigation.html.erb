<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav">
      <% if current_user.admin? %>
        <li <%= 'class=active' if params[:controller] == "customers" %>><%= link_to "Customers", customers_path %></li>
        <li <%= 'class=active' if params[:controller] == "users" %>><%= link_to "Users", users_path %></li>
      <% else %>
        <li <%= 'class=active' if %w(smartbars smartbars_wizard).include?(params[:controller]) %>><%= link_to "Smartbars", customer_smartbars_path(customer_id: current_user.customer_id) %></li>
        <li <%= 'class=active' if params[:controller] == "users" %>><%= link_to "Account", user_path(current_user) %></li>
      <% end %>
    </ul>
  </div>
</div>
