<h2>Sign in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :email, input_html: { class: "input-xlarge", value: params[:email], autofocus: params[:email].nil? ? true : false } %>
  <%= f.input :password, input_html: { class: "input-xlarge", autofocus: params[:email].nil? ? false : true } %>
  <%= f.input :remember_me, as: :boolean, wrapper: :checkbox if devise_mapping.rememberable? %>
  <div class="form-actions">
    <button type="submit" class="btn btn-primary">Sign in</button>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-link' if devise_mapping.recoverable? %>
  </div>
<% end %>
