<h2>Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :email, input_html: { class: "input-xlarge" } %>
  <div class="form-actions">
    <%= button_tag "Send reset instructions", class: "btn btn-primary" %>
    <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-link" %>
  </div>
<% end %>