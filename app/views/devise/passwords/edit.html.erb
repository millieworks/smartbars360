<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, class: "input-xlarge" %>
  <%= f.input :password_confirmation, class: "input-xlarge" %>
  <div class="form-actions">
    <%= button_tag "Change my password", class: "btn btn-primary" %>
    <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-link" %>
  </div>
<% end %>